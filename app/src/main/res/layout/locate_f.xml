<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:baselineAligned="false"
        android:text="스포츠선택"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/gray_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:baselineAligned="false"
        android:text="원하시는 스포츠 시설의 종목을 선택해주세요"
        android:textSize="15dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="410dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/sub_grey" />

        <ImageButton
            android:id="@+id/soccer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/soccerball"
            android:clickable="true" />

        <TextView
            android:id="@+id/soccerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="25dp"
            android:text="축구장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/basketball2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/soccer"
            android:background="@drawable/basketball"
            android:clickable="true" />


        <TextView
            android:id="@+id/basketballName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/soccerName"
            android:text="농구장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/badminton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/basketball2"
            android:background="@drawable/badminton"
            android:clickable="true" />

        <TextView
            android:id="@+id/badmintonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/basketballName2"
            android:text="배드민턴장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/billiard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/billiard"
            android:clickable="true" />

        <TextView
            android:id="@+id/billiardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/billiard"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:text="당구장"
            android:textSize="19dp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/swimpool"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="75dp"
            android:layout_toRightOf="@id/billiard"
            android:background="@drawable/swimpoll"
            android:clickable="true" />

        <TextView
            android:id="@+id/swimpoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swimpool"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/billiardName"
            android:text="수영장"
            android:textSize="19dp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/putsal"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@+id/soccer"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="75dp"
            android:layout_toRightOf="@id/swimpool"
            android:clickable="true"
            android:padding="0dp"
            android:src="@drawable/putsal" />

        <TextView
            android:id="@+id/putsalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/putsal"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/swimpool"
            android:text="풋살장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/golf"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_below="@id/billiardName"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:src="@drawable/golf" />

        <TextView
            android:id="@+id/golfName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/golf"
            android:layout_marginLeft="44dp"
            android:text="골프장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/tennis"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_below="@id/swimpoolName"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/golf"
            android:background="#00ffffff"
            android:clickable="true"
            android:src="@drawable/tennis" />

        <TextView
            android:id="@+id/tennisName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/golf"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/golfName"
            android:text="테니스장"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/baseBall"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_below="@id/putsalName"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tennis"
            android:background="#00ffffff"
            android:clickable="true"
            android:src="@drawable/baseball" />

        <TextView
            android:id="@+id/baseBallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/golf"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/tennisName"
            android:text="야구장"
            android:textSize="19dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <Button
        android:id="@+id/checkbtn"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginchange"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:clickable="true"
        android:textStyle="bold" />


</LinearLayout>