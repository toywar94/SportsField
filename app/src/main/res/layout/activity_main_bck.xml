<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/SF"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Sports Field"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp">



        <ImageView
            android:id="@+id/imagebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/main_grey" />

        <ImageButton
            android:id="@+id/soccer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/soccerball"/>

        <TextView
            android:id="@+id/soccerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="축구"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/soccer"/>

        <ImageButton
            android:id="@+id/bolling"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/soccer"
            android:background="@drawable/bolling"/>

        <TextView
            android:id="@+id/bollingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="볼링"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/soccerName"
            android:layout_below="@+id/soccer"/>

        <ImageButton
            android:id="@+id/badminton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="140dp"
            android:layout_toRightOf="@id/bolling"
            android:layout_marginLeft="40dp"
            android:background="@drawable/badminton"/>

        <TextView
            android:id="@+id/badmintonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배드민턴"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/bollingName"
            android:layout_below="@+id/soccer"/>

        <ImageButton
            android:id="@+id/basketball"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/soccer"
            android:background="@drawable/basketball"/>

        <TextView
            android:id="@+id/basketballName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="농구"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/basketball"/>



        <ImageButton
            android:id="@+id/swimpool"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="55dp"
            android:layout_below="@+id/soccer"
            android:layout_toRightOf="@id/basketball"
            android:background="@drawable/swimpoll"/>

        <TextView
            android:id="@+id/swimpoolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수영장"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/basketball"
            android:layout_below="@+id/basketball"/>



        <ImageButton
            android:id="@+id/putsal"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="55dp"
            android:layout_below="@+id/soccer"
            android:layout_toRightOf="@id/swimpool"
            android:padding="0dp"
            android:src="@drawable/putsal"/>

        <TextView
            android:id="@+id/putsalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="풋살"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/swimpool"
            android:layout_below="@+id/basketball"/>



    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp">




        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/menu_bottom" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>




